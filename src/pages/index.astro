---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Packages from "../components/Packages.astro";
import BlogSection from "../components/BlogSection.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Medcalf Software Solutions",
  url: "https://medcalfsoftwaresolutions.com",
  logo: "https://medcalfsoftwaresolutions.com/images/M Logo.svg",
  description:
    "Medcalf Software Solutions delivers Graph Database solutions, Knowledge Graphs, AI-powered document processing, and full-stack development services.",
  contactPoint: {
    "@type": "ContactPoint",
    telephone: "+1-804-259-2533",
    contactType: "sales",
    email: "hello@medcalfsoftwaresolutions.com",
  },
  sameAs: [
    "https://www.linkedin.com/company/medcalf-software-solutions-llc",
  ],
};

const servicesSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Graph Database and AI Solutions",
  provider: {
    "@type": "Organization",
    name: "Medcalf Software Solutions",
  },
  areaServed: "Worldwide",
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Software Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Graph Database Solutions",
          description: "Neo4j-certified implementation of graph databases and knowledge graphs for connected data applications.",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "AI Document Processing",
          description: "Intelligent document extraction and processing systems using multi-stage prompting and structured outputs.",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "GraphRAG Implementation",
          description: "Graph-based retrieval augmented generation systems that combine the power of knowledge graphs with LLMs.",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Full-Stack Development",
          description: "Modern web and mobile applications built with React, React Native, and proven engineering practices.",
        },
      },
    ],
  },
};
---

<Layout
  title="Medcalf Software Solutions - Graph Database & AI Solutions Expert"
  description="Medcalf Software Solutions delivers Graph Database solutions, Knowledge Graphs, AI-powered document processing, and full-stack development services to transform how you work with connected data."
>
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(servicesSchema)} />
  <Navigation />
  <Hero />
  <Services />
  <Packages />
  <BlogSection />
  <ContactForm />
  <Footer />
</Layout>
