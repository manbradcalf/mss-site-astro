---
import Layout from "./Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: title,
  description: description,
  provider: {
    "@type": "Organization",
    name: "Medcalf Software Solutions",
    logo: {
      "@type": "ImageObject",
      url: new URL("/images/M Logo.svg", Astro.site).toString(),
    },
  },
};
---

<Layout
  title={`${title} - Medcalf Software Solutions`}
  description={description}
  image={image}
  type="website"
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />

  <Navigation />

  <main class="service-page">
    <article class="container">
      <header class="page-header">
        <h1>{title}</h1>
        <p class="description">{description}</p>

        <div class="cta-section">
          <a href="#contact" class="cta-button">
            Get in Touch
          </a>
        </div>
      </header>

      <div class="page-content">
        <slot />
      </div>
    </article>
  </main>

  <ContactForm />

  <Footer />
</Layout>

<style>
  .service-page {
    padding-top: 120px;
    padding-bottom: 80px;
    background-color: #fff;
  }

  .service-page .container {
    max-width: 1000px;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
    padding-bottom: 2rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .page-header h1 {
    font-size: 3rem;
    color: #333;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  .description {
    font-size: 1.3rem;
    color: #666;
    margin: 0 0 2rem 0;
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-content {
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .page-content :global(h2) {
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    color: #333;
    border-bottom: 2px solid var(--color-primary, #1dbf73);
    padding-bottom: 0.5rem;
  }

  .page-content :global(h3) {
    font-size: 1.6rem;
    margin: 2rem 0 1rem;
    color: #444;
  }

  .page-content :global(h4) {
    font-size: 1.3rem;
    margin: 1.5rem 0 1rem;
    color: #555;
  }

  .page-content :global(p) {
    margin-bottom: 1.5rem;
    color: #444;
  }

  .page-content :global(ul),
  .page-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .page-content :global(li) {
    margin-bottom: 0.8rem;
  }

  .page-content :global(strong) {
    color: #333;
    font-weight: 600;
  }

  .page-content :global(.pricing-card),
  .page-content :global(.service-tier) {
    background: #f8f9fa;
    border-left: 4px solid var(--color-primary, #1dbf73);
    padding: 1.5rem;
    margin: 1.5rem 0;
    border-radius: 8px;
  }

  .page-content :global(.pricing-card h4),
  .page-content :global(.service-tier h4) {
    margin-top: 0;
    color: var(--color-primary, #1dbf73);
  }

  .page-content :global(.case-study) {
    background: #fff;
    border: 2px solid #f0f0f0;
    padding: 2rem;
    margin: 2rem 0;
    border-radius: 8px;
  }

  .page-content :global(.industries-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .page-content :global(.industry-card) {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  .page-content :global(.industry-card h4) {
    margin-top: 0;
    color: #333;
  }

  .page-content :global(code) {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .page-content :global(blockquote) {
    border-left: 4px solid var(--color-primary, #1dbf73);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #666;
  }

  .cta-section {
    margin-top: 2rem;
    text-align: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: #1dbf73;
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(29, 191, 115, 0.3);
  }

  .cta-button:hover {
    background-color: #19a463;
    box-shadow: 0 4px 12px rgba(29, 191, 115, 0.4);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .service-page {
      padding-top: 100px;
    }

    .page-header h1 {
      font-size: 2.2rem;
    }

    .description {
      font-size: 1.1rem;
    }

    .page-content {
      font-size: 1rem;
    }

    .page-content :global(h2) {
      font-size: 1.6rem;
    }

    .page-content :global(h3) {
      font-size: 1.4rem;
    }

    .page-content :global(.industries-grid) {
      grid-template-columns: 1fr;
    }
  }
</style>
