---
const currentYear = new Date().getFullYear();

const services = [
  { name: "Test Automation", href: "#services" },
  { name: "React Development", href: "#services" },
  { name: "React Native", href: "#services" },
  { name: "QA Consulting", href: "#services" }
];

const quickLinks = [
  { name: "Portfolio", href: "#portfolio" },
  { name: "Blog", href: "/blog/" },
  { name: "Contact", href: "#contact" }
];

const socialLinks = [
  { icon: "fab fa-linkedin", href: "#", label: "LinkedIn" },
  { icon: "fab fa-github", href: "#", label: "GitHub" },
  { icon: "fab fa-twitter", href: "#", label: "Twitter" }
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>About Us</h3>
        <p>
          Medcalf Software Solutions specializes in delivering high-quality test
          automation and QA solutions for businesses of all sizes.
        </p>
        <div class="social-links">
          {
            socialLinks.map(({ icon, href, label }) => (
              <a href={href} aria-label={label}>
                <i class={icon} />
              </a>
            ))
          }
        </div>
      </div>

      <div class="footer-section">
        <h3>Services</h3>
        <ul>
          {
            services.map(({ name, href }) => (
              <li>
                <a href={href}>{name}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          {
            quickLinks.map(({ name, href }) => (
              <li>
                <a href={href}>{name}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="footer-section">
        <h3>Contact Us</h3>
        <p>
          Ready to elevate your QA process? Get in touch with us today.
        </p>
        <a href="#contact" class="btn btn-outline">Contact Now</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Medcalf Software Solutions. All rights reserved.</p>
    </div>
  </div>
</footer>
