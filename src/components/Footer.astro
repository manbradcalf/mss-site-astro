---
import {services} from "../components/Services.astro"

const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: "Blog", href: "/blog/" },
  { name: "Contact", href: "/#contact" },
  { name: "Newsletter", href: "https://www.linkedin.com/newsletters/practical-graph-and-ai-roundup-7401995578622255104/"}
];

const socialLinks = [
  {
    icon: "fab fa-linkedin",
    href: "https://www.linkedin.com/company/medcalf-software-solutions-llc",
    label: "LinkedIn",
  },
  // { icon: "fab fa-github", href: "#", label: "GitHub" },
  // { icon: "fab fa-twitter", href: "#", label: "Twitter" },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>About Us</h3>
        <p>
        We bring over 10 years of experience designing, developing and testing high quality software across multiple platforms and business verticles. 
        </p>
        <div class="social-links">
          {
            socialLinks.map(({ icon, href, label }) => (
              <a href={href} aria-label={label}>
                <i class={icon} />
              </a>
            ))
          }
        </div>
      </div>

      <div class="footer-section">
        <h3>Services</h3>
        <ul>
          {
            services.map(({ title}) => (
              <li>
                <a href="/#services">{title}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          {
            quickLinks.map(({ name, href }) => (
              <li>
                <a href={href}>{name}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="footer-section">
        <h3>Contact Us</h3>
        <p>Get in touch with us today.</p>
        <a href="/#contact" class="btn btn-outline">Contact Now</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        &copy; {currentYear} Medcalf Software Solutions. All rights reserved.
      </p>
    </div>
  </div>
</footer>
