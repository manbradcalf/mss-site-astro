---
// src/components/Packages.astro
const packages = [
  {
    name: "Starter",
    price: "2,500",
    period: "/project",
    features: [
      "Basic test automation setup",
      "Up to 20 automated test cases",
      "Basic CI/CD integration",
      "2 weeks delivery",
      "Email support"
    ],
    featured: false
  },
  {
    name: "Professional",
    price: "7,500",
    period: "/project",
    features: [
      "Comprehensive test framework",
      "Up to 100 automated test cases",
      "Advanced CI/CD integration",
      "Performance testing included",
      "4 weeks delivery",
      "Priority support",
      "Documentation & training"
    ],
    featured: true
  },
  {
    name: "Enterprise",
    price: "15,000",
    period: "+",
    features: [
      "Custom enterprise solution",
      "Unlimited test cases",
      "Full DevOps integration",
      "Multi-platform testing",
      "Dedicated project manager",
      "24/7 support",
      "Ongoing maintenance"
    ],
    featured: false
  }
];
---

<section id="packages" class="packages">
  <div class="container">
    <div class="section-header">
      <h2>Service Packages</h2>
      <p>Choose the perfect package for your project needs</p>
    </div>
    <div class="packages-grid">
      {
        packages.map((pkg) => (
          <div class={`package-card ${pkg.featured ? 'featured' : ''}`}>
            {pkg.featured && <div class="package-badge">Most Popular</div>}
            <div class="package-header">
              <h3>{pkg.name}</h3>
              <div class="package-price">
                <span class="currency">$</span>
                <span class="amount">{pkg.price}</span>
                <span class="period">{pkg.period}</span>
              </div>
            </div>
            <ul class="package-features">
              {pkg.features.map((feature) => (
                <li>
                  <i class="fas fa-check" /> {feature}
                </li>
              ))}
            </ul>
            <a
              href="#contact"
              class={`btn ${pkg.featured ? 'btn-primary' : 'btn-outline'}`}
            >
              {pkg.name === 'Enterprise' ? 'Contact Us' : 'Get Started'}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
