---
// src/components/Packages.astro
const packages = [
  {
    name: "Discovery",
    period: "/project",
    features: [
      "Feasibility Assessment",
      "POC Scope Definition",
      "Technical Architecture Plan",
      "Optional Workshop",
      "1-2 weeks delivery",
      "Documentation Included"
    ],
    featured: false
  },
  {
    name: "Implementation",
    period: "/project",
    features: [
    "E2E Solution Implementation",
      "Dedicated Development Hours",
      "Regular Check-Ins",
      "Testing and validation Suite",
      "Deployment and Monitoring",
      "Training & Documentation",
      "Priority Support"
    ],
    featured: true
  },
  {
    name: "Retainer",
    period: "/month",
    features: [
      "Flexible Pricing & Hours",
      "Architecture consulting",
      "Feature development",
      "Performance optimization",
      "Dedicated availability",
      "Flexible engagement"
    ],
    featured: false
  }
];
---

<section id="packages" class="packages">
  <div class="container">
    <div class="section-header">
      <h2>Service Packages</h2>
      <p>Choose the perfect package for your project needs. Applies to all our Service offerings.</p>
    </div>
    <div class="packages-grid">
      {
        packages.map((pkg) => (
          <div class={"package-card"}>
            <div class="package-header">
              <h3>{pkg.name}</h3>
            </div>
            <ul class="package-features">
              {pkg.features.map((feature) => (
                <li>
                  <i class="fas fa-check" /> {feature}
                </li>
              ))}
            </ul>
            <a
              href="#contact"
              class={`btn ${pkg.featured ? 'btn-primary' : 'btn-secondary'}`}
            >
              Get A Quote 
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
