---
interface Props {
  tags: string[];
  className?: string;
}

const { tags, className = "" } = Astro.props;
---

<div class:list={["tag-list", className]}>
  {
    tags.map((tag) => (
      <a href={`/blog/tags/${tag.toLowerCase()}`} class="tag">
        {tag}
      </a>
    ))
  }
</div>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.5rem 0;
  }

  .tag {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    background-color: #f0f0f0;
    color: #666;
    text-decoration: none;
    font-size: 0.85rem;
    transition: all 0.2s ease;
  }

  .tag:hover {
    background-color: var(--color-primary, #1dbf73);
    color: white;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .tag {
      padding: 0.25rem 0.6rem;
      font-size: 0.8rem;
    }
  }
</style>
