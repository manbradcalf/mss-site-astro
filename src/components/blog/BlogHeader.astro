---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<header class="blog-header">
  <p>{description}</p>
</header>

<style>
  .blog-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .blog-header p {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .blog-header {
      padding: 1.5rem 0;
    }

    .blog-header h1 {
      font-size: 2rem;
    }

    .blog-header p {
      font-size: 1rem;
    }
  }
</style>
